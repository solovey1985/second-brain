{
  "name": "second-brain-docs",
  "version": "2.0.0",
  "description": "Clean SOLID-compliant documentation portal with ZeroMD",
  "main": "server/app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "test": "echo \"No tests specified\" && exit 0",
    "build": "node build-static.js",
    "build:local": "node build-static.js --target=local",
    "build:github": "node build-static.js --target=github", 
    "build:watch": "nodemon build-static.js",
    "serve:static": "cd docs && python -m http.server 8080",
    "serve:static:node": "npx http-server docs -p 8080 -c-1",
    "preview": "npm run build:local && npm run serve:static:node",
    "preview:github": "npm run build:github && npm run serve:static:node",
    "clean": "rmdir /s /q docs 2>nul || rm -rf docs 2>/dev/null || echo 'docs folder cleaned'"
  },
  "keywords": [
    "documentation",
    "markdown",
    "portal",
    "zeromd",
    "mermaid",
    "latex"
  ],
  "author": "solovey1985",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "highlight.js": "^11.11.1",
    "marked": "^16.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "http-server": "^14.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solovey1985/second-brain.git"
  },
  "bugs": {
    "url": "https://github.com/solovey1985/second-brain/issues"
  },
  "homepage": "https://github.com/solovey1985/second-brain#readme"
}
